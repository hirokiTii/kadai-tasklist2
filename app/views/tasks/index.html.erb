<% if logged_in? %>
  <h1>タスク一覧</h1>
  <ul>
    <% @tasks.each do |t| %>
    <li><%= link_to t.id, task_path(t) %> : <%= t.content %> <% if t.status %>(<%= t.status %>)<% end %></li>
    <% end %>
  </ul>
  <%= link_to '作成', new_task_path %>
<% else %>
  <h1>タスク管理アプリ</h1>
  <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
<% end %>
