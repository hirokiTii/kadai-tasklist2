<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
  <div>
      <p>エラーメッセージ</p>
    <ul>
      <% task.errors.full_messages.each do |msg| %>
        <li><strong><%= msg %></strong></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= f.label :content, 'メッセージ' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.submit '投稿' %>
<% end %>